            <TextView
                android:id="@+id/option2"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:text="Delhi"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
